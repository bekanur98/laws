{% trans_default_domain 'Homepage' %}
{% extends 'Layouts/homepage.html.twig' %}
{% block page_title %}{{ 'home' | trans }}{% endblock %}

{% block body %}
<!--content-->
<div class="content">
    <div class="new-question">
        <div class="new-question__avatar">
            <img src="{{ asset('img/avatar.jpg') }}" alt="avatar">
        </div>
        <div class="new-question__input">
            <input type="text" placeholder="What's your question">
        </div>
    </div>
    <div class="questions-block">
        <div class="questions-tab">
            <a href="{{ path('newQuestions') }}" class="questions-tab__item">Recent Questions</a>
            <a href="#" class="questions-tab__item">Most Answered</a>
            <a href="#" class="questions-tab__item">Bomp Questions</a>
            <a href="#" class="questions-tab__item">Answers</a>
            <a href="#" class="questions-tab__item">Most Visited</a>
        </div>
        {% block questions %}
        {% endblock %}
        <div class="answers-list">
            <div class="answer-block">
                <div class="answer-block__top">
                    <div class="answer-block__question-block">
                        <p class="qustion-meta-data">
                                        <span class="qustion-meta-data__meta-date">
                                            Asked:
                                            <a href="#">April 19, 2018</a>
                                        </span>
                            <span class="qustion-meta-data__byline">
                                            In:
                                            <a href="#">Language</a>
                                        </span>
                        </p>
                        <p class="answer-block__question">
                            <a href="#">Why are the British confused about us calling bread rolls “biscuits”
                                when they call bread rolls “puddings”?</a>
                        </p>
                    </div>
                </div>
                <div class="answer-block__bottom">
                    <div class="answer-block__avatar">
                        <img src="{{ asset('img/avatar.jpg') }}" class="avatar-border" alt="avatar">
                    </div>
                    <div class="answer-block__content">
                        <div class="user-info">
                            <a href="#" class="user-info__author-name">Martin Hope</a>
                            <span class="user-info__author-badge">Explainer</span>
                        </div>
                        <p class="answer-block__meta">
                            Added an answer on April 19, 2018 at 2:07 am
                        </p>
                        <p class="answer-block__answer">
                            It may be little things like not using native idioms, that you would pick up
                            from living in the UK.

                            But, hey. That’s just a guess.

                            Also, I don’t think I would’ve noticed you were foreign from what you wrote, if
                            you didn’t point it o
                        </p>
                        <div class="answer-block__action">
                            <div class="answer-block__rating">
                                <p class="vote-up"></p>
                                <p class="vote-result">62</p>
                                <p class="vote-bottom"></p>
                            </div>
                            <a href="#" class="answer-block__share">Share</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!--/content-->
{% endblock %}
