{% extends 'Default/home.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="form-wrapper form-wrapper_login">
        <form method="post" class="form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Вы вошли в систему как {{ app.user.username }}, <a href="{{ path('app_logout') }}">Выйти</a>
                </div>
            {% endif %}
            <br>
            <h1 class="h3 mb-3 font-weight-normal">Войти</h1>
            <label for="inputUsername">
                Имя пользователя
            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form__input form-control" required autofocus>
            </label>
            <label for="inputPassword">
                Пароль
                <input type="password" name="password" id="inputPassword" class="form__input form-control" required>
            </label>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <p class="form__reset-link"><a href="#">Забыли пароль?</a></p>
            <button class="btn" type="submit">
                Войти
            </button>
        </form>
    </div>
{% endblock %}
