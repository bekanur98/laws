{% extends 'Default/home.html.twig' %}
{% block page_title %} News Page {% endblock %}

{% block body %}

{#<head>#}
{#    <link rel="stylesheet" href="/public/style.css">#}
{#</head>#}

<div class="news-block">
    <h3 class="h3">Latest News & Updates</h3>
    <div class="news">
        {% for n in news %}
            <div class="news__item">
                <img src="{{ asset('images/thumbnails/' ~ n.getThumbnail) }}" class="news__img">
                <div class="news__body">
                    <div class="news__date"> {{ n.getCreatedAt | date('F j, Y, g:i a') }} </div>
                    <p class="news__title">
                        <a href="#">{{ n.getTitleNews }}</a>
                    </p>
                    {{ n.getBodyNews | length > 200 ? n.getBodyNews|striptags|slice(0, 200) ~ '...' : n.getBodyNews|striptags|nl2br  }}
{#                    <p class="news__descr">{{ n.getBodyNews }}</p>#}
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="btn" href="{{ path('createNews') }}">Explore our blog</a>
</div>

{% endblock %}